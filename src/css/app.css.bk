@font-face {
  font-family: "Gibson Detroit Regular";
  src: url("./fonts/GibsonDetroit-Reg.eot");
  src: url("./fonts/GibsonDetroit-Reg.woff") format("woff"), url("./fonts/GibsonDetroit-Reg.svg#filename") format("svg");
}
@font-face {
  font-family: "Gibson Detroit Light";
  src: url("./fonts/GibsonDetroit-Light.eot");
  src: url("./fonts/GibsonDetroit-Light.woff") format("woff"), url("./fonts/GibsonDetroit-Light.svg#filename") format("svg");
}

@import url('https://rsms.me/inter/inter.css');

body {
  font-family: "Gibson Detroit Regular", "Gibson Detroit Light", sans-serif;
  margin: 0;
  padding: 0;
  font-size: 1rem;
}

@media screen and (max-width: 768px) {
  /* .map {
    height: 400px;
  } */
}

@media screen and (min-width: 768px) {
  .App,
  .BusRoute,
  .nearby {
    display: grid;
    grid-template: auto auto repeat(7, 1fr) auto / repeat(8, 1fr);
    height: 100vh;
    width: 100vw;
  }

  .nav {
    grid-row: 1/2;
    grid-column: 1/9;
  }

  .footer {
    grid-column: 1/9;
    grid-row: 10/11;
  }

  .header {
    grid-row: 2/3;
    grid-column: 1/9;
  }

  /* Homepage */
  .explainer {
    grid-row: 2/3;
    grid-column: 1/9;
  }

  .routes-homepage {
    grid-row: 4/6;
    grid-column: 1/6;
  }

  .stops {
    grid-row: 3/6;
    grid-column: 6/9;
  }

  .systemMap {
    grid-row: 7/8;
    grid-column: 1/9;
  }

  .footer-homepage {
    grid-row: 8/9;
    grid-column: 1/9;
  }

  .details {
    grid-row: 3/10;
    grid-column: 5/9;
  }
  .routeMap {
    grid-column: 1/5;
    grid-row: 3/11;
  }

  .stopList {
    grid-row: 2/11;
    grid-column: 5/9;
    overflow-y: scroll;
  }

  /* Stop, LineRealTime */
  .map {
    grid-column: 1/5;
    grid-row: 2/11;
    border: 5px solid white;
  }
  .routes {
    grid-column: 5/9;
    grid-row: 2/11;
    overflow-y: auto;
  }

  /* / */
  .search {
    grid-column: 1/4;
    grid-row: 2/11;
  }
  .geolocate {
    grid-column: 5/9;
    grid-row: 2/9;
  }

  /* LineSchedule */
  .schedule {
    grid-column: 1/9;
    grid-row: 2/9;
  }
}
